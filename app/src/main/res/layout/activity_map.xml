<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sagar.mapsample.MapActivity">


    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10sp"
        android:src="@drawable/ic_location_searching_white_24dp"
        android:id="@+id/btnMyLocation"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnMyLocation"
        android:layout_margin="10sp"
        android:src="@drawable/ic_layers"
        android:id="@+id/btnLayer"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNavigation"
        android:layout_margin="10sp"
        android:src="@drawable/ic_search"
        android:id="@+id/btnSearch"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnLayer"
        android:layout_margin="10sp"
        android:src="@drawable/ic_navigation"
        android:id="@+id/btnNavigation"
        />

</android.support.constraint.ConstraintLayout>
