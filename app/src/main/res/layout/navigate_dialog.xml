<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sagar.mapsample.AutoCompleteOnPreferences
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origin"
        android:id="@+id/editMyLocationDialog"/>

    <com.sagar.mapsample.AutoCompleteOnPreferences
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:id="@+id/editDestinationDialog"
        app:layout_constraintTop_toBottomOf="@+id/editMyLocationDialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:id="@+id/btnNavigateDialog"
        app:layout_constraintTop_toBottomOf="@+id/editDestinationDialog"
        app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>